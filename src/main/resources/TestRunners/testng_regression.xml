<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Regression Test Suite" verbose="4">

	<test name="Amazon App Test">
	<parameter name="browser" value="chrome"/>
	<parameter name="url" value="https://www.amazon.com/"/>
		<classes>
			<class name="mytest.AmazonTest" />
		</classes>
	</test>

	<test name="Ornage HRM Test">
	<parameter name="browser" value="chrome"/>
	<parameter name="url" value="https://www.orangehrm.com/orangehrm-30-day-trial/?"/>
		<classes>
			<class name="mytest.MyHRMTest" />
		</classes>
	</test>

	<test name="Google Test">
	<parameter name="browser" value="chrome"/>
	<parameter name="url" value="https://www.google.com/"/>
		<classes>
			<class name="mytest.GoogleTest" />
		</classes>
	</test>
	 
	
	<test name="Open Cart Negative Testing">
	<parameter name="browser" value="chrome"/>
	<parameter name="url" value="https://demo.opencart.com/index.php?route=account/login"/>
		<classes>
			<class name="mytest.LoginNegativeTest" />
		</classes>
	</test> 

</suite>